{{>layouts/header}}

<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">UserName</th>
        <th scope="col">Content</th>
    </tr>
    </thead>

    <tbody>
    {{#movie}}
        <tr>
            <th>{{id}}</th>
            <th>{{username}}</th>
            <td>{{content}}</td>
        </tr>
